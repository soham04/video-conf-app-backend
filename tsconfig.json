{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "typeRoots": ["./node_modules/@types"],

    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
